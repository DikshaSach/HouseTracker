<link rel="stylesheet" type="text/css" href="/index.css" />
<link href="https://fonts.googleapis.com/css?family=Josefin+Slab" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<title>HouseList</title>

<nav>
    <div id="navBarLogo">
        <a class="house-icon" href="/" src="/images/houses_icon.png">
            <img class="house-icon" src="/images/houses_icon.png">
        </a>
        <h1 class="house-tracker">House Tracker</h1>
    </div>
    <div id="navbarLinks">
        <a href="/" class="home">Home &#8226;</a>
        <a href="/signin" class="sign-in">SignIn &#8226; </a>
        
        <a href="/register" class="register">Register</a> 
        </div>       
</nav>
<h1 class="houseList-Title share-list-title">Houses being tracked:</h1> 
<ul id="houseList">
    <% if (list != null) { %>
        <% for(var i=0; i< list.length; i++) { %>
            <li houseID="<%= list[i].id %>" id="<%= list[i].id %>" class="listItemHouse">
                <span id="houseRatingSpan">
        <% for(var y=0; y< list[i].rating; y++) { %>
       <img src="/images/heart.png" class="heart-image" style="height: 25px;">     
                <% } %>
        </span>

                <br>

                <span id="housePriceSpan">&nbsp;<span id="bulletpoint"> &#8226; &nbsp;</span>
                <%= list[i].price %>
                    </span>
                    <br>
                    <span id="houseLocationSpan"> <%= list[i].location %> </span>
                    <img class="house-image" src="<%= list[i].image %>" style="height: 300px;">
            </li>
            <% } %>

                <% } %>
</ul>

<script src="/index.js"></script>
<script src="/account.js"></script>
<script src="/clickHandlers.js"></script>
<script src="/http.js"></script>